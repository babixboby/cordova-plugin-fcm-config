<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="cordova-plugin-fcm-config"
    version="1.0.0">
    
    <name>cordova-plugin-fcm-config</name>
    
    <description>This plugin copies the required fcm configurations in the project folder</description>
    
    <author>Steffen Tr√∂ster</author>
    
    <license>MIT</license>

	<platform name="android">
		<source-file src="strings.xml" target-dir="./res/values-id/"/>
		<source-file src="strings.xml" target-dir="./res/values-en/"/>
		<source-file src="strings.xml" target-dir="./res/values-en-US/"/>
		<source-file src="strings.xml" target-dir="./res/values-en-IN/"/>
		<source-file src="strings.xml" target-dir="./res/values-en-GB/"/>
		<source-file src="strings.xml" target-dir="./res/values-en-CA/"/>
		<source-file src="strings.xml" target-dir="./res/values-en-SG/"/>
	</platform>

	<platform name="ios">
		<source-file src="GoogleService-Info.plist"/>
	</platform>
</plugin>
